<h1><%= @tenant.name %></h1>

<b> Location: </b> <%= link_to @tenant.location.name, location_url(@tenant.location_id) %>

<hr/>
<div class="mt-2"> <h3>Contracts</h3>

    <div class="row">
        <% @tenant.contracts.each do |c| %>
            <div class="card m-3" style="width: 300px">
                <div class="card-body">
                    <div><b>Unit: </b><%= c.unit.name %></div>
                    <div><b>Start Date:</b> <%= c.start_date.strftime("%b %d %Y") %></div>
                    <div><b>End Date: </b><%= c.end_date.strftime("%b %d %Y") %></div>
                    <div><b>Charge: </b><%= c.charge %></div>
                    <div><%= link_to "Edit contract", edit_contract_url(c.id) %></div>
                    <div><%= link_to "Delete contract", contract_url(c.id), method: :delete   %></div>
                </div>
            </div>
        <% end %>
    </div>

    <div>
    <%=link_to "Add new contract", new_tenant_contract_path(@tenant.id)%>
    </div>

</div>