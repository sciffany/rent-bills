<h1>Location Search</h1>

<div class="row mt-3">
  <div class="col-md-4">
        <%= form_tag(locations_search_url, method: "get") do%>
        <%= text_field_tag (:name), "", placeholder: "e.g. Dima", class: 'form-control'%>
        <%= submit_tag "Search", class: "btn btn-primary mt-2" %>
    </div>
</div>

<% end %>
<div class="mt-5">
    <h2>Search Results</h2>
    <div class="mt-3">
        <% @locations.each do |location| %>
            <%= link_to location.name, new_location_duty_path(location.id), class: "btn btn-primary" %>
        <% end %>
    </div>
</div>
