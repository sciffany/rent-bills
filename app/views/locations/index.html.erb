<h2>List of Locations</h2>

<% @locations.each do |location| %>
    <%= link_to location.name, location_path(location.id), class: "btn btn-primary mt-3" %>
<% end %>

<%if current_user && current_user.owner?%>
<div class="mt-3"><%= link_to "Add new location", new_location_path %></div>

<% else %>
<div class="mt-3">Log in as owner to create locations</div>
<% end %>