<h1>New contract</h1>
<div class="row mt-3">
  <div class="col-md-4">

        <%= form_for @contract, url: {action: "create"}  do |f| %>
			<div><b>Location: </b><%=@tenant.location.name%></div>
			<b>Tenant name: </b><%=@tenant.name%>
			<div class="form-group font-weight-bold">
				<%= f.label :unit %>
				<%= f.collection_select :unit_id, @units.all, :id, :name %>
            </div>
			
			<div class="form-group font-weight-bold">
				<%= f.label :start_date %>
				<%= f.date_field :start_date, class: "form-control" %>
				<%= f.label :end_date %>
				<%= f.date_field :end_date, class: "form-control" %>
			</div>
            
			<div class="form-group font-weight-bold">
                <%= f.label :charge %>
                <%= f.text_field :charge, class: "form-control" %>
            </div>

			<div class="form-group font-weight-bold text-center">
				<%= f.submit "Create Contract", class: "btn btn-primary form-control" %>
			</div>

		<% end %>
	</div>
</div>
