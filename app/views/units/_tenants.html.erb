<div class="m-3">
    These are the tenants of <%=location.name%>
    <% if !location.contracts.empty? %>
        <% location.contracts.each do |c| %>
            <div class="card mt-3 p-3">
                <%= link_to c.tenant.name, tenant_url(c.tenant.id) %>
                <div class="mt-1"><b>Start date: </b><%= c.start_date.strftime("%B %d, %Y") %></div>
                <div class="mt-1"><b>End date: </b><%= c.end_date.strftime("%B %d, %Y") %></div>
            </div>
        <% end %>
    <%end%>
    <div class="mt-3"><%=link_to "Add tenants", new_location_tenant_path(location.id), class: "btn btn-primary"%>
    </div>
</div>