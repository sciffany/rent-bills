<div class="m-3">
    These are the contracts of <%=unit.name%>.
    <% if !unit.contracts.empty? %>
        <% unit.contracts.each do |c| %>
            <%= render partial: 'contracts/show', locals: {contract: c} %>
        <% end %>
    <%end%>
    <div class="mt-3"><%=link_to "Add contracts", new_location_contract_path(unit.location.id, unit_id: unit.id), class: "btn btn-primary"%>
    </div>
</div>