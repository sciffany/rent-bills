<h1>New Unit</h1>
<div class="row mt-3">
  <div class="col-md-4">
		<b>Location name:</b> <%=@location.name%>
        <%= form_for @unit, url: {action: "create"}  do |f| %>
            
			<div class="form-group font-weight-bold">
				<%= f.label :name %>
				<%= f.text_field :name, class: "form-control" %>
			</div>

			<div class="form-group font-weight-bold">
				<%= f.label :price %>
				<%= f.number_field :price, class: "form-control" %>
            </div>
            
            <div class="form-group font-weight-bold text-center">
				<%= f.submit "Add unit", class: "btn btn-primary form-control" %>
			</div>

		<% end %>
	</div>
</div>
