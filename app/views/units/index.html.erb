<div>
<h1><%= @location.name %></h1>
</div>

<div>
<table class="table">
    <thead>
        <tr>
            <th scope="col"> Unit No
            <th scope="col"> Price
            <th scope="col"> Tenant
            <th scope="col"> Balance
            <th scope="col"> Link 
            <th scope="col"> Contract
        </tr>
    </thead>
    <tbody>
        <% @units.each do |u| %>
            <tr>
            <th scope="col"><%= u.name %>
            <th scope="col"><%= u.price %></th>
            <th scope="col"><%=link_to "Add tenant", new_location_tenant_url, class: "btn btn-primary mt-1"%></th>
            <th scope="col">0</th>
            <th scope="col"><%=link_to "Check dues", users_url, class: "btn btn-primary mt-1" %></th>
            <th scope="col">Start and end date </th>
            </tr>
        <% end %>
        
    </tbody>
</table>
</div>

<div>
<%= link_to "Add units", new_location_unit_path , class:"btn btn-primary mt-1"%>
</div>