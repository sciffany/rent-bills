<h1>Register as keeper</h1>
<div class="row mt-3">
  <div class="col-md-4">

        <%= form_for @duty, url: {action: "create"}  do |f| %>
			<b> Location: </b> <%= @location.name %>

			<div class="form-group font-weight-bold text-center">
				<%= f.submit "Sign up", class: "btn btn-primary form-control" %>
			</div>
			
			<%= link_to "Back to search", locations_search_url %>

		<% end %>
	</div>
</div>
