<h1>Manage a location</h1>
<div class="row mt-3">
  <div class="col-md-4">

        <%= form_for @duty, url: {action: "create"}  do |f| %>
			<b> Keeper: </b> <%=current_user.name%><br />
			<b> Location: </b> <%= @location.name %>
			
			<div class="form-group font-weight-bold">
				<%= f.label :start_date %>
				<%= f.date_field :start_date, class: "form-control" %>
			</div>

			<div class="form-group font-weight-bold">
				<%= f.label :end_date %>
				<%= f.date_field :end_date, class: "form-control" %>
			</div>

			<div class="form-group font-weight-bold text-center">
				<%= f.submit "Sign up", class: "btn btn-primary form-control" %>
			</div>

			<%= link_to "Back to #{@location.name}", location_url(@location.id) %>

		<% end %>
	</div>
</div>
