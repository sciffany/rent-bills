<h1 align="center">Edit Duty</h1>
<div class="row mt-3">
  <div class="offset-4 col-md-4">

        <%= form_for @duty, url: {action: "update"}  do |f| %>
			
			<b> Keeper: </b><%= @duty.keeper.name %><br />
			<b> Location:</b> <%= @duty.location.name %>

			<div class="form-group font-weight-bold">
				<%= f.label :start_date %>
				<%= f.date_field :start_date, class: "form-control" %>
			</div>

			<div class="form-group font-weight-bold">
				<%= f.label :end_date %>
				<%= f.date_field :end_date, class: "form-control" %>
			</div>

			<div class="form-group font-weight-bold text-center">
				<%= f.submit "Edit Duty", class: "btn btn-primary form-control" %>
			</div>

			<%= link_to "Back to #{@duty.location.name}", location_url(@duty.location.id) %>

		<% end %>
	</div>
</div>
